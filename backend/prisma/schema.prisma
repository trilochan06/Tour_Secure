generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String          @id @default(cuid())
  name      String
  contact   String
  createdAt DateTime        @default(now())
  itinerary ItineraryItem[]
  reviews   Review[]
}

model ItineraryItem {
  id        String   @id @default(cuid())
  userId    String
  title     String
  date      String
  location  String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Review {
  id        String   @id @default(cuid())
  place     String
  rating    Int
  comment   String
  createdAt DateTime @default(now())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
}

model Zone {
  id        String   @id @default(cuid())
  name      String
  score     Int
  polygon   String
  createdAt DateTime @default(now())
}

model EFIR {
  id          String   @id @default(cuid())
  name        String
  contact     String
  description String
  createdAt   DateTime @default(now())
}

model Alert {
  id        String   @id @default(cuid())
  lat       Float
  lon       Float
  createdAt DateTime @default(now())
}
